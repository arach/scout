{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Scout",
  "version": "0.1.0",
  "identifier": "com.scout.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Scout - Voice Transcription",
        "width": 960,
        "height": 720,
        "closable": true,
        "minimizable": true
      },
      {
        "label": "overlay",
        "title": "Scout Recording",
        "url": "overlay.html",
        "width": 280,
        "height": 60,
        "resizable": false,
        "fullscreen": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "decorations": false,
        "transparent": true,
        "center": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
