    "tauri:build:universal": "tauri build --target universal-apple-darwin",
    "tauri:build:prod": "tauri build -c tauri.prod.conf.json",
    "analyze": "ANALYZE=true vite build",
    "analyze:serve": "ANALYZE=true vite build && npx vite preview",
    "test": "vitest",
