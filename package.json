{
  "name": "scout",
  "private": true,
  "version": "0.5.0",
  "type": "module",
  "scripts": {
    "dev": "vite --config config/vite.config.ts",
    "build": "tsc && vite build --config config/vite.config.ts",
    "preview": "vite preview --config config/vite.config.ts",
    "tauri": "tauri",
    "tauri:build": "tauri build",
    "tauri:build:universal": "tauri build --target universal-apple-darwin",
    "tauri:build:prod": "tauri build -c tauri.prod.conf.json",
    "analyze": "ANALYZE=true vite build --config config/vite.config.ts",
    "analyze:serve": "ANALYZE=true vite build --config config/vite.config.ts && npx vite preview --config config/vite.config.ts",
    "test": "vitest --config config/vitest.config.ts",
    "test:ui": "vitest --ui --config config/vitest.config.ts",
    "test:run": "vitest run --config config/vitest.config.ts",
    "test:coverage": "vitest run --coverage --config config/vitest.config.ts",
    "test:watch": "vitest --watch --config config/vitest.config.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@arach/speakeasy": "^0.1.6",
    "@base-ui-components/react": "1.0.0-beta.0",
    "@radix-ui/react-select": "^2.2.5",
    "@tauri-apps/api": "^2.6.0",
    "@tauri-apps/plugin-dialog": "^2.3.0",
    "@tauri-apps/plugin-fs": "^2.4.0",
    "@tauri-apps/plugin-http": "^2.5.0",
    "@tauri-apps/plugin-opener": "^2.4.0",
    "@tauri-apps/plugin-shell": "^2.3.0",
    "@types/marked": "^6.0.0",
    "@types/react-window": "^1.8.8",
    "@wavesurfer/react": "^1.0.11",
    "lucide-react": "^0.522.0",
    "marked": "^16.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^1.8.11",
    "wavesurfer.js": "^7.9.9"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.8.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.0",
    "eslint": "^9.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.5.6",
    "postcss-nesting": "^13.0.2",
    "postcss-preset-env": "^10.2.4",
    "terser": "^5.43.1",
    "typescript": "~5.6.3",
    "vite": "^6.3.5",
    "vite-bundle-analyzer": "^1.1.0",
    "vitest": "^2.1.9"
  }
}
